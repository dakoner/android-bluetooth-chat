<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<View
    android:id="@+id/center_aligner"
    android:layout_width="5dip"
    android:layout_height="2dip"
    android:layout_centerHorizontal="true"
    />

<TextView
    android:id="@+id/serial_output_label"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/serial_output_label"
    android:layout_toLeftOf="@id/center_aligner"
    android:layout_below="@id/center_aligner"
    android:textSize="20sp"
    />
 <TextView
        android:id="@+id/serial_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@id/center_aligner"
        android:layout_below="@id/center_aligner"
        android:textSize="20sp"
        />

</RelativeLayout>
